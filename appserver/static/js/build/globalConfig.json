{
    "meta": {
        "name": "TA-cryptosuite",
        "displayName": "Cryptosuite",
        "version": "2.0a",
        "apiVersion": "3.0.0",
        "restRoot": "TA_cryptosuite"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                },
                {
                    "name": "additional_parameters",
                    "title": "Add-on Settings",
                    "entity": [
                        {
                            "field": "site_packages",
                            "label": "Python site-packages location",
                            "type": "text",
                            "help": "This parameter is optional and only required if usage of encrypted private RSA keys needs to be supported. If specified, the crypt command will attempt to import the \"pycryptodomex\" package from here ",
                            "required": false,
                            "defaultValue": "",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of text input is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "/absolute_path_to_local_python_installation/site-packages"
                            }
                        }
                    ]
                }
            ]
        },
        "inputs": {
            "title": "Inputs",
            "description": "Manage your data inputs",
            "table": {
                "header": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    }
                ],
                "moreInfo": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    },
                    {
                        "field": "type_of_data",
                        "label": "Type of Data"
                    },
                    {
                        "field": "key_salt",
                        "label": "Key / Salt"
                    },
                    {
                        "field": "rsa_key_encryption_password",
                        "label": "RSA key encryption password"
                    },
                    {
                        "field": "authorized_roles",
                        "label": "Authorized Roles"
                    },
                    {
                        "field": "authorized_users",
                        "label": "Authorized Users"
                    }
                ],
                "actions": [
                    "edit",
                    "enable",
                    "delete",
                    "clone"
                ]
            },
            "services": [
                {
                    "name": "crypto_settings",
                    "title": "Crypto Settings",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "help": "Time interval of input in seconds.",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                    "errorMsg": "Interval must be an integer."
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "blackList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        },
                        {
                            "field": "type_of_data",
                            "label": "Type of Data",
                            "help": "Select if you are uploading a new key file for encryption/decryption or a new salt file for hashing.",
                            "required": true,
                            "type": "radio",
                            "defaultValue": "key",
                            "options": {
                                "items": [
                                    {
                                        "value": "key",
                                        "label": "New key"
                                    },
                                    {
                                        "value": "salt",
                                        "label": "New salt"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "key_salt",
                            "label": "Key / Salt",
                            "help": "Paste your key or salt here.",
                            "required": true,
                            "type": "text",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "********"
                            }
                        },
                        {
                            "field": "rsa_key_encryption_password",
                            "label": "RSA key encryption password",
                            "help": "Optional: If you are uploading an AES-256-CBC, DES-CBC or DES-EDE3-CBC encrypted private RSA key file, specify the corresponding password here. Leave blank otherwise.",
                            "required": false,
                            "type": "text",
                            "encrypted": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 8192,
                                    "errorMsg": "Max length of password is 8192"
                                }
                            ],
                            "options": {
                                "placeholder": "********"
                            }
                        },
                        {
                            "field": "authorized_roles",
                            "label": "Authorized Roles",
                            "help": "Specify which roles should be authorized to use this key/salt file.",
                            "required": false,
                            "type": "multipleSelect",
                            "options": {
                                "delimiter": "~",
                                "items": [
                                    {
                                        "value": "option1",
                                        "label": "Option1"
                                    },
                                    {
                                        "value": "option2",
                                        "label": "Option2"
                                    },
                                    {
                                        "value": "option3",
                                        "label": "Option3"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "authorized_users",
                            "label": "Authorized Users",
                            "help": "Specify which users should be authorized to use this key/salt file.",
                            "required": false,
                            "type": "multipleSelect",
                            "options": {
                                "delimiter": "~",
                                "items": [
                                    {
                                        "value": "option1",
                                        "label": "Option1"
                                    },
                                    {
                                        "value": "option2",
                                        "label": "Option2"
                                    },
                                    {
                                        "value": "option3",
                                        "label": "Option3"
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    }
}